<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sonidos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnAbeja"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#81d8d0"
                android:src="@drawable/abejita"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnGato"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#49678d"
                android:src="@drawable/cat"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnElefante"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#2a6478"
                android:src="@drawable/elephant"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnKoala"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#bdecb6"
                android:src="@drawable/koala"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnLeon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#a56d5d"
                android:src="@drawable/lion"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnPajaro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#008080"
                android:src="@drawable/pajarito"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnVaca"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#008000"
                android:src="@drawable/vaca"
                android:padding="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/btnZorro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#191919"
                android:src="@drawable/zorrito"
                android:padding="50dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>